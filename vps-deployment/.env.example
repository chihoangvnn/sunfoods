# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env on your VPS and update with your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name

# Server Configuration
NODE_ENV=production
PORT=3000

# Domain & URLs
DOMAIN=yourdomain.com
API_URL=https://yourdomain.com/api
NEXT_PUBLIC_API_URL=https://yourdomain.com

# Security
SESSION_SECRET=your-super-secret-session-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Facebook Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_key
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# OpenAI / Gemini
GEMINI_API_KEY=your_gemini_api_key

# Ngrok (for webhooks in development)
NGROK_AUTH_TOKEN=your_ngrok_token

# OpenRouteService (Maps)
ORS_API_KEY=your_ors_api_key

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_key

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
# VietQR
VIETQR_API_KEY=your_vietqr_key
VIETQR_CLIENT_ID=your_vietqr_client_id

# Bank Info (for QR payments)
SHB_ACCOUNT_NAME=Your Account Name
SHB_BANK_ACCOUNT=1234567890

# Shopee Integration
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key

# TikTok Integration
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Bot API (if using telegram/other bots)
BOT_API_KEY=your_bot_api_key
