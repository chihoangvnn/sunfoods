modules = ["nodejs-20", "postgresql-16", "python-3.11"]
[agent]
expertMode = true
integrations = ["javascript_gemini:1.0.0", "twilio_send_message:1.0.0", "javascript_sendgrid:1.0.0", "replitmail:1.0.0", "javascript_log_in_with_replit:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["jq", "unzip", "libuuid", "cairo", "pango", "libjpeg", "giflib", "u-root-cmds", "nano", "sshpass", "rsync"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Customer Mobile Storefront"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Dashboard"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=3001 NODE_ENV=development tsx src/index.ts"
waitForPort = 3001

[[workflows.workflow]]
name = "Customer Mobile Storefront"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd customer-mobile && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Admin Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd admin-web && npx vite --port 3002 --host 0.0.0.0"
waitForPort = 3002

[workflows.workflow.metadata]
outputType = "console"

