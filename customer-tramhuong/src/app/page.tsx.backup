                  <div className="relative z-10 container mx-auto px-8 h-full flex items-center">
                    <div className="max-w-2xl text-white">
                      <h1 className="text-5xl font-bold mb-4 leading-tight">
                        Hương Trầm Thanh Tịnh
                        <br />
                        <span className="text-green-200">Tâm Hồn An Nhiên</span>
                      </h1>
                      <p className="text-xl mb-8 text-green-100 leading-relaxed">
                        Khám phá bộ sưu tập nhang trầm hương cao cấp, mang đến không gian thiền định thanh tịnh cho gia đình bạn
                      </p>
                      <div className="flex gap-4">
                        <Button size="lg" className="bg-white text-green-800 hover:bg-green-50 px-8 py-3 text-lg font-semibold">
                          🔍 Khám Phá Ngay
                        </Button>
                        <Button size="lg" variant="outline" className="border-white text-white hover:bg-white hover:text-green-800 px-8 py-3 text-lg">
                          📞 Tư Vấn Miễn Phí
                        </Button>
                      </div>
                    </div>
                  </div>
                  {/* Decorative Elements */}
                  <div className="absolute top-4 right-8 text-6xl opacity-20">🕉️</div>
                  <div className="absolute bottom-8 right-16 text-4xl opacity-20">🪷</div>
                </div>

                {/* Features Section */}
                <div className="py-16 px-8">
                  <div className="container mx-auto">
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
                      <div className="text-center">
                        <div className="text-4xl mb-4">🌿</div>
                        <h3 className="text-xl font-semibold text-gray-800 mb-2">Nguyên Liệu Tự Nhiên</h3>
                        <p className="text-gray-600">100% từ thảo dược thiên nhiên, không hóa chất độc hại</p>
                      </div>
                      <div className="text-center">
                        <div className="text-4xl mb-4">🧘</div>
                        <h3 className="text-xl font-semibold text-gray-800 mb-2">Thiền Định Tâm Linh</h3>
                        <p className="text-gray-600">Hỗ trợ thực hành thiền, yoga và các nghi lễ tâm linh</p>
                      </div>
                      <div className="text-center">
                        <div className="text-4xl mb-4">🏠</div>
                        <h3 className="text-xl font-semibold text-gray-800 mb-2">Không Gian Thanh Tịnh</h3>
                        <p className="text-gray-600">Tạo môi trường trong lành, thư giãn cho cả gia đình</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ) : (
              /* Mobile Banner Slider */
              <ImageSlider 
                images={BANNER_IMAGES}
                className="mb-6"
                autoplay={true}
                autoplayDelay={4000}
              />
            )}

            {/* Products Section */}
            <div className={`${layoutConfig.contentPadding} ${layoutConfig.sectionSpacing}`}>
              <div className={layoutConfig.desktopProductContainer}>
                {/* Section Header */}
                <div className="text-center mb-12">
                  <h2 className="text-3xl font-bold text-gray-800 mb-4">Sản Phẩm Nổi Bật</h2>
                  <p className="text-gray-600 text-lg max-w-2xl mx-auto">
                    Khám phá bộ sưu tập nhang trầm hương cao cấp, được tuyển chọn kỹ lưỡng từ những nguyên liệu tự nhiên tốt nhất
                  </p>
                </div>
                
                {/* Product Grid */}
                <div className={`grid ${layoutConfig.gridCols} ${layoutConfig.gridGap}`}>
                {productsLoading && !productsError ? (
                  // Loading skeleton
                  Array.from({ length: 8 }).map((_, index) => (
                    <div key={index} className="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                      <div className="aspect-square bg-gray-200 animate-pulse" />
                      <div className="p-4">
                        <div className="h-4 bg-gray-200 rounded animate-pulse mb-2" />
                        <div className="h-3 bg-gray-200 rounded animate-pulse w-2/3" />
                      </div>
                    </div>
                  ))
                ) : false ? (
                  <div className="text-center py-8 col-span-full">
                    <span className="text-4xl mb-4 block">⚠️</span>
                    <p className="text-gray-600 mb-4">Không thể tải sản phẩm - hiển thị demo</p>
                    <Button onClick={() => window.location.reload()}>
                      Thử lại
                    </Button>
                  </div>
                ) : finalProducts.length === 0 ? (
                  <div className="text-center py-8 col-span-full">
                    <span className="text-4xl mb-4 block">🔍</span>
                    <p className="text-gray-600">Không tìm thấy sản phẩm</p>
                  </div>
                ) : (
                  finalProducts.map((product) => (
                    <div key={product.id} className={`bg-white rounded-xl border border-blue-100 overflow-hidden transition-all duration-300 hover:shadow-xl hover:border-blue-200 hover:-translate-y-1 ${isMobile ? 'shadow-sm min-h-[380px]' : 'shadow-lg min-h-[480px]'}`}>
                      {/* Badges Section */}
                      {renderProductBadges(product).length > 0 && (
                        <div className="bg-blue-50 border-b border-blue-100 p-3">
                          <div className="flex flex-wrap gap-2">
                            {renderProductBadges(product)}
                          </div>
                        </div>
                      )}
                      
                      {/* Product Image */}
                      <div 
                        className={`${isMobile ? 'aspect-square' : 'aspect-[4/3]'} bg-blue-50 cursor-pointer relative group overflow-hidden`}
                        onClick={() => setSelectedProduct(product)}
                      >
                        <MediaViewer
                          src={product.media || product.image}
                          alt={product.name}
                          className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          isHomepage={activeTab === 'home'}
                        />
                        {/* Hover overlay */}
                        <div className="absolute inset-0 bg-blue-900/0 group-hover:bg-blue-900/10 transition-colors duration-300" />
                      </div>
                      
                      {/* Product Info */}
                      <div className={`${isMobile ? 'p-4' : 'p-5'} space-y-3`}>
                        {/* Product Name */}
                        <h3 className={`font-semibold text-slate-900 leading-tight ${isMobile ? 'text-sm h-10' : 'text-base h-12'} overflow-hidden`}>
                          {product.name}
                        </h3>
                        
                        {/* Rating & Reviews - simplified for now */}
                        <div className="flex items-center gap-2">
                          <div className="flex items-center">
                            <Star className="h-4 w-4 fill-yellow-400 text-yellow-400" />
                            <Star className="h-4 w-4 fill-yellow-400 text-yellow-400" />
                            <Star className="h-4 w-4 fill-yellow-400 text-yellow-400" />
                            <Star className="h-4 w-4 fill-yellow-400 text-yellow-400" />
                            <Star className="h-4 w-4 fill-slate-200 text-slate-200" />
                          </div>
                          <span className="text-xs text-slate-600">(4.0) 127 reviews</span>
                        </div>
                        
                        {/* Price Section */}
                        <div className="space-y-1">
                          <div className="flex items-center gap-2">
                            <span className={`text-blue-600 font-bold ${isMobile ? 'text-lg' : 'text-xl'}`}>
                              {formatVietnamPrice(product.price)}
                            </span>
                            <span className={`text-slate-400 line-through ${isMobile ? 'text-sm' : 'text-base'}`}>
                              {formatVietnamPrice(Math.round(product.price * 1.25))}
                            </span>
                          </div>
                        </div>
                        
                        {/* Stock & Shipping Info */}
                        <div className="flex items-center justify-between text-xs">
                          <div className="flex items-center gap-1 text-slate-600">
                            <span>📦</span>
                            <span>Còn {product.stock}</span>
                          </div>
                          {product.isFreeshipping && (
                            <div className="flex items-center gap-1 text-blue-600">
                              <span>🚚</span>
                              <span className="font-medium">Freeship</span>
                            </div>
                          )}
                        </div>
                        
                        {/* Dual CTA Buttons */}
                        <div className="space-y-2 pt-2">
                          <Button 
                            onClick={() => addToCart(product)}
                            disabled={product.stock === 0}
                            className={`w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold ${isMobile ? 'py-2 text-sm' : 'py-2.5 text-sm'} rounded-lg transition-colors duration-200`}
                          >
                            <ShoppingCart className={`${isMobile ? 'h-4 w-4' : 'h-4 w-4'} mr-2`} />
                            THÊM VÀO GIỎ HÀNG
                          </Button>
                          <Button 
                            variant="outline"
                            onClick={() => setSelectedProduct(product)}
                            className={`w-full border-blue-200 text-blue-600 hover:bg-blue-50 hover:border-blue-300 font-medium ${isMobile ? 'py-2 text-sm' : 'py-2.5 text-sm'} rounded-lg transition-colors duration-200`}
                          >
                            XEM THÊM
                          </Button>
                        </div>
                      </div>
                    </div>
                  )))
                )}
                </div>
              </div>
            </div>

            {/* Testimonials Section - Desktop Only */}
            {!isMobile && (
              <div className="bg-gradient-to-b from-green-50 to-white py-16 px-8">
                <div className="max-w-6xl mx-auto">
                  <div className="text-center mb-12">
                    <h2 className="text-3xl font-bold text-gray-800 mb-4">Khách Hàng Nói Gì Về Chúng Tôi</h2>
                    <p className="text-gray-600 text-lg">Những chia sẻ chân thực từ khách hàng yêu mến</p>
                  </div>
                  
                  <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div className="bg-white p-6 rounded-xl shadow-lg border border-green-100">
                      <div className="flex items-center mb-4">
                        <div className="text-2xl mr-3">👩‍💼</div>
                        <div>
                          <h4 className="font-semibold text-gray-800">Chị Mai Linh</h4>
                          <p className="text-sm text-gray-600">Giáo viên Yoga</p>
                        </div>
                      </div>
                      <p className="text-gray-700 mb-4">
                        "Nhang trầm của shop rất thơm, giúp tôi tập trung hơn trong các buổi thiền. 
                        Hương thơm tự nhiên, không gây khó chịu."
                      </p>
                      <div className="flex text-yellow-400">
                        ⭐⭐⭐⭐⭐
                      </div>
                    </div>
                    
                    <div className="bg-white p-6 rounded-xl shadow-lg border border-green-100">
                      <div className="flex items-center mb-4">
                        <div className="text-2xl mr-3">👨‍🦳</div>
                        <div>
                          <h4 className="font-semibold text-gray-800">Anh Văn Minh</h4>
                          <p className="text-sm text-gray-600">Phật tử tại gia</p>
                        </div>
                      </div>
                      <p className="text-gray-700 mb-4">
                        "Gia đình tôi dùng nhang này trong các nghi lễ cúng bái. 
                        Chất lượng tốt, giá cả hợp lý, sẽ ủng hộ dài dài."
                      </p>
                      <div className="flex text-yellow-400">
                        ⭐⭐⭐⭐⭐
                      </div>
                    </div>
                    
                    <div className="bg-white p-6 rounded-xl shadow-lg border border-green-100">
                      <div className="flex items-center mb-4">
                        <div className="text-2xl mr-3">👩‍🎓</div>
                        <div>
                          <h4 className="font-semibold text-gray-800">Cô Thanh Hoa</h4>
                          <p className="text-sm text-gray-600">Chuyên gia phong thủy</p>
                        </div>
                      </div>
                      <p className="text-gray-700 mb-4">
                        "Tôi khuyên khách hàng dùng nhang này để cân bằng năng lượng. 
                        Thành phần tự nhiên, an toàn cho sức khỏe."
                      </p>
                      <div className="flex text-yellow-400">
                        ⭐⭐⭐⭐⭐
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            )}

            {/* Call-to-Action Section - Desktop Only */}
            {!isMobile && (
              <div className="bg-gradient-to-r from-green-800 to-green-600 py-16 px-8 text-white">
                <div className="max-w-4xl mx-auto text-center">
                  <h2 className="text-4xl font-bold mb-6">Bắt Đầu Hành Trình Tâm Linh Của Bạn</h2>
                  <p className="text-xl text-green-100 mb-8 leading-relaxed">
                    Để lại thông tin để nhận tư vấn miễn phí và ưu đãi đặc biệt cho khách hàng mới
                  </p>
                  <div className="flex gap-4 justify-center">
                    <Button size="lg" className="bg-white text-green-800 hover:bg-green-50 px-8 py-3 text-lg font-semibold">
                      🎁 Nhận Ưu Đãi Ngay
                    </Button>
                    <Button size="lg" variant="outline" className="border-white text-white hover:bg-white hover:text-green-800 px-8 py-3 text-lg">
                      📞 Hotline: 1900-xxx-xxx
                    </Button>
                  </div>
                </div>
              </div>
            )}

            {/* Infinite Loading Indicator */}
            {isFetchingNextPage && (
              <div className="text-center py-4">
                <div className="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-green-500"></div>
              </div>
            )}
          </div>
        );
        
        return homeContent;
    }
  };

  return (
    <div className="min-h-screen bg-white">
      {/* Desktop Header - Show on tablet and desktop */}
      {!isMobile && (
        <DesktopHeader
          storeName="NhangSach.Net"
          cartCount={getTotalItems()}
          searchQuery={searchQuery}
          onSearchChange={setSearchQuery}
          onCartClick={handleHeaderCartClick}
          onProfileClick={handleProfileClick}
          onGuestLogin={() => console.log('Guest login')}
          onBlogClick={() => setActiveTab('blog')}
          onLogoClick={() => {
            // Navigate to home - reset all states
            setActiveTab('home');
            setSelectedProduct(null);
            setForceFullView(false);
            setSelectedBlogPost(null);
            setSearchQuery('');
            setSelectedCategory('all');
          }}
        />
      )}

      {/* Mobile Header - Show on mobile only */}
      {isMobile && (
        <MobileHeader
          onSearchClick={handleHeaderSearchClick}
          onCartClick={handleHeaderCartClick}
          onProfileClick={handleProfileClick}
          cartCount={getTotalItems()}
          storeName="Nhang Sạch .Net"
        />
      )}

      {/* Auto Hide Search Bar - Mobile only */}
      {isMobile && activeTab === 'home' && (
        <AutoHideSearchBar
          searchQuery={searchQuery}
          onSearchChange={setSearchQuery}
          placeholder="Tìm kiếm sản phẩm..."
        />
      )}

      {/* Hidden Search Bar - Desktop only */}
      {!isMobile && (
        <HiddenSearchBar
          searchQuery={searchQuery}
          onSearchChange={setSearchQuery}
          placeholder="Tìm kiếm sản phẩm..."
        />
      )}

      <main className={isMobile ? "pb-20 pt-8" : "pt-6"}>
        {renderContent()}
      </main>

      {/* Bottom Navigation - Mobile only */}
      {isMobile && (
        <StorefrontBottomNav
          activeTab={activeTab}
          onTabChange={handleTabChange}
          cartCount={getTotalItems()}
        />
      )}

      {/* ChatBot - Responsive */}
      {isMobile ? <MobileChatBot /> : <DesktopChatBot />}

      {/* Desktop Footer - Show on desktop only */}
      {!isMobile && <DesktopFooter />}

      {/* Product Modal - Desktop only, hide when force full view */}
      {!isMobile && !forceFullView && (
        <ProductModal
          product={selectedProduct}
          isOpen={!!selectedProduct}
          onClose={() => {
            setSelectedProduct(null);
            setForceFullView(false);
          }}
          onAddToCart={addToCart}
          onViewFull={(product) => {
            // Enable full page view mode for desktop
            setForceFullView(true);
            // Scroll to top for better UX
            window.scrollTo(0, 0);
            // Modal will automatically close due to updated render logic
          }}
          cart={cart}
        />
      )}

    </div>
  );
}